#include<bits/stdc++.h>
typedef long long LL;
#define ll long long int
#define fast_io ios_base::sync_with_stdio(false),cin.tie(NULL),cout.tie(NULL)
using namespace std;
int main(){
#ifndef ONLINE_JUDGE
freopen("input.txt","r",stdin);
freopen("output.txt","w",stdout);
#endif
ll n;
cin>>n;
while(n!=1LL){
    cout<<n<<" ";
    if(n%2){
        n=(n*3)+1;
    }
    else{
        n/=2;
    }
}
cout<<1<<endl;
}
